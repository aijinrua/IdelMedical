@{
    ViewData["Title"] = "Broadcast Detail Page";

}

@section Styles {
    <environment include="Development">
        <link href="~/css/community.css" rel="stylesheet" />
    </environment>
}
<div class="communityDetail">
    <div class="contentArea">
        <form>
            <div class="splitLine"></div>
            <div class="itemLine">
                <div>
                    <span>제 목</span>
                </div>
                <div>
                    <div class="textData">
                        <input type="text" value="" />
                    </div>
                </div>
            </div>
            <div class="splitLine"></div>
            <div class="itemLine">
                <div>
                </div>
                <div>
                    <div class="thumbnailArea">
                        <span>썸네일</span>
                    </div>
                    <div class="originArea">
                        <span>내용 이미지</span>
                    </div>
                </div>
            </div>
            <div class="splitLine"></div>
            <div class="itemLine">
                <div>
                    <span>P C</span>
                </div>
                <div>
                    <div class="thumbnailArea">
                        <input id="thumb_pc" name="thumb_pc" type="file" style="display: none;" onchange="updateImage.call(this);" />
                        <label for="thumb_pc" style="display: inline-block; margin: 0 auto;">
                            <div class="thumb">
                                No Image
                            </div>
                        </label>
                    </div>
                    <div class="originArea">
                        <input id="img_pc" name="img_pc" type="file" style="display: none;" onchange="updateImage.call(this);" />
                        <label for="img_pc" style="display: inline-block; margin: 0 auto;">
                            <div class="thumb">
                                No Image
                            </div>
                        </label>
                    </div>
                </div>
            </div>
            <div class="splitLine"></div>
            <div class="itemLine">
                <div>
                    <span>Mobile</span>
                </div>
                <div>
                    <div class="thumbnailArea">
                        <input id="thumb_mb" name="thumb_mb" type="file" style="display: none;" onchange="updateImage.call(this);" />
                        <label for="thumb_mb" style="display: inline-block; margin: 0 auto;">
                            <div class="thumb">
                                No Image
                            </div>
                        </label>
                    </div>
                    <div class="originArea">
                        <input id="img_mb" name="img_mb" type="file" style="display: none;" onchange="updateImage.call(this);" />
                        <label for="img_mb" style="display: inline-block; margin: 0 auto;">
                            <div class="thumb">
                                No Image
                            </div>
                        </label>
                    </div>
                </div>
            </div>
            <div class="splitLine"></div>
            <div class="itemLine">
                <div>
                    <div>
                        <span>페이지 링크</span>
                    </div>
                </div>
                <div>
                    <div class="textData">
                        <input type="text" />
                    </div>
                </div>
            </div>
            <div class="splitLine"></div>
            <div class="itemLine">
                <div>
                    <div>
                        <span>동영상 링크</span>
                    </div>
                </div>
                <div>
                    <div class="textData">
                        <input type="text" />
                    </div>
                </div>
            </div>
            <div class="splitLine"></div>
            <div class="itemLine" style="text-align: center;">
                <button class="btn-delete" type="button" style="margin-right: 10px;">삭제</button>
                <button class="btn-default" type="button" style="margin-right: 10px;" onclick="history.back();">목록</button>
                <button class="btn-primary" type="submit">등록</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function updateImage() {
            if ($(this).prop('files').length > 0) {
                var file = $(this).prop('files')[0];
                var localurl = URL.createObjectURL(file);

                var thumb = $(this).next().find('.thumb');
                thumb.css('background-image', 'url(' + localurl + ')');
                thumb.text('');
            }
        }
    </script>
}