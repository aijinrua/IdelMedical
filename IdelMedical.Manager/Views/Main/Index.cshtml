@{
    ViewData["Title"] = "Main Page";
    var SlideData = (List<SlideModel>)ViewBag.SlideData;
    var Pager = (PageHandler)ViewBag.Pager;
    var Search = (string)ViewBag.Search;

}

@section Styles {
    <environment include="Development">
        <link href="~/css/main.css" rel="stylesheet" />
    </environment>
}

<div class="main">
    <div class="topBar">
        <div class="category">
            <div>
                <span>카테고리 선택</span>
                <select name="categoryItems" onchange="">
                    <option value="Slide">Slide</option>
                    <option value="YouTube">YouTube</option>
                    <option value="Instagram">Instagram</option>
                </select>
            </div>
            <div>
                <button class="addBtn" onclick="location.href='/Main/Slide'">
                    <span>신규 등록</span>
                </button>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="splitLine"></div>

        <div class="table">
            <div class="header">
                <div style="width:120px;">
                    No.
                </div>
                <div>
                    제 목
                </div>
                <div style="width:120px;">
                    등록일자
                </div>
            </div>
            @{ 
                int count = 0;
            }
            @foreach (var item in SlideData)
            {
                count++;
                if (count > 15) break;
                <div>
                    <div style="text-align: center;">
                        @item.Number
                    </div>
                    <div style="text-align: center;">
                        @item.Title
                    </div>
                    <div style="text-align: center;">
                        @item.UploadTime
                    </div>
                </div>
            }
        </div>
        @{
            if (SlideData != null)
            {
                <div class="splitLine"></div>
            }
            if (SlideData.Count > 15)
            {
                var pageCount = SlideData.Count % 15;
                <div class="pageBtn">
                    <a>&lt&lt</a>
                    <a>&lt</a>
                    @for (int i = 0; i < pageCount; i++)
                    {
                        <a>@(i + 1)</a>
                    }
                    <a>&gt</a>
                    <a>&gt&gt</a>

                </div>
            }
        }
    </div>
</div>
